package barrywey.igosyncdocs2011.resource;

import java.awt.Image;

import javax.swing.Icon;
import javax.swing.ImageIcon;

/**
 * 
 *
 *
 * @author BarryWei
 * @version 1.0, Oct 21, 2010
 * @since JDK1.6
 */
public class ImageResource {
	
	public static Icon getIcon(String iconName) {
		return new ImageIcon(ImageResource.class.getResource("/barrywey/igosyncdocs2011/resource/image/"+iconName));
	}
	
	public static Image getImage(String imageName) {
		return new ImageIcon(ImageResource.class.getResource("/barrywey/igosyncdocs2011/resource/image/"+imageName)).getImage();
	}
}
